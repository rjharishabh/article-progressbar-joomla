<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" version="1.0" method="upgrade" group="system">
    <name>plg_system_article_progressbar</name>
    <author>Rishabh Ranjan Jha</author>
    <creationDate>July 2021</creationDate>
    <copyright>(C) 2021 Rishabh Ranjan Jha</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>rpextensions@gmail.com</authorEmail>
    <version>1.0.0</version>
    <description>PLG_SYSTEM_ARTICLE_PROGRESSBAR_XML_DESCRIPTION</description>

    <files>
        <filename plugin="rparticleprogressbar">rparticleprogressbar.php</filename>
    </files>

    <languages folder="administrator/language">
        <language tag="en-GB">language/en-GB/en-GB.plg_system_rparticleprogressbar.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_rparticleprogressbar.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">

                <field
                    name="site_part"
                    type="note"
                    class="alert alert-info"
                    label="Article Progressbar - Site part"
                />

                <field
                    name="site"
                    type="radio"
                    class="btn-group btn-group-yesno"
                    label="Article Progressbar on Site part"
                    default="1"
                    filter="integer"
                    >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="site_position"
                    type="list"
                    label="Position"
                    showon="site:1"
                    >
                    <option value="top">Top</option>
                    <option value="bottom">Bottom</option>
                    <option value="left">Left</option>
                    <option value="right">Right</option>
                </field>

                <field
                    name="site_offset"
                    type="text"
                    label="Offset from the edge"
                    default="0"
                    showon="site:1"
                />

                <field
                    name="site_bcolor"
                    type="color"
                    label="Background Color"
                    showon="site:1"
                />

                <field
                    name="site_pcolor"
                    type="color"
                    label="Progressbar Color"
                    showon="site:1"
                />

                <field
                    name="site_width"
                    type="text"
                    label="Width"
                    default="8px"
                    showon="site_position:left,right[AND]site:1"
                />

                <field
                    name="site_height"
                    type="text"
                    label="Height"
                    default="8px"
                    showon="site_position:top,bottom[AND]site:1"
                />

                <field
                    name="site_bradius"
                    type="text"
                    label="Border Radius"
                    default="100px"
                    showon="site:1"
                />

                <field
                    name="admin_part"
                    type="note"
                    class="alert alert-info"
                    label="Article Progressbar - Site part"
                />

                <field
                    name="admin"
                    type="radio"
                    class="btn-group btn-group-yesno"
                    label="Article Progressbar on Site part"
                    default="0"
                    filter="integer"
                    >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field
                    name="admin_position"
                    type="list"
                    label="Position"
                    showon="admin:1"
                    >
                    <option value="top">Top</option>
                    <option value="bottom">Bottom</option>
                    <option value="left">Left</option>
                    <option value="right">Right</option>
                </field>

                <field
                    name="admin_offset"
                    type="text"
                    label="Offset from the edge"
                    default="0"
                    showon="admin:1"
                />

                <field
                    name="admin_bcolor"
                    type="color"
                    label="Background Color"
                    showon="admin:1"
                />

                <field
                    name="admin_pcolor"
                    type="color"
                    label="Progressbar Color"
                    showon="admin:1"
                />

                <field
                    name="admin_width"
                    type="text"
                    label="Width"
                    default="8px"
                    showon="admin_position:left,right[AND]admin:1"
                />

                <field
                    name="admin_height"
                    type="text"
                    label="Height"
                    default="8px"
                    showon="admin_position:top,bottom[AND]admin:1"
                />

                <field
                    name="admin_bradius"
                    type="text"
                    label="Border Radius"
                    default="100px"
                    showon="admin:1"
                />

            </fieldset>
        </fields>
    </config>
</extension>
